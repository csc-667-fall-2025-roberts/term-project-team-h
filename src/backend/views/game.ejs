<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>UNO Game Room</title>
    <link rel="stylesheet" href="/stylesheets/game.css" />
  </head>
  <body>
    <div class="game-page">
      <header class="game-header">
        <h1>Game Room</h1>
        <div class="game-header-right">
          <button class="secondary-button">Options:</button>
          <a href="/lobby" class="secondary-button">Back to Lobby</a>
        </div>
      </header>

      <main class="game-layout">
        <section class="opponents-row">
          <div class="opponent-card">
            <div class="opponent-name">Player Two</div>
            <div class="opponent-meta">Cards: 5</div>
          </div>
          <div class="opponent-card">
            <div class="opponent-name">Player Three</div>
            <div class="opponent-meta">Cards: 5</div>
          </div>
        </section>

        <section class="center-row">
          <div class="pile draw-pile">Draw</div>

          <div class="discard-area">
            <div class="discard-card">
              <div class="card-value">7</div>
              <div class="card-value card-value--bottom">7</div>
            </div>
            <p class="helper-text">
              Click a card and it will be placed on top of the discard pile.
            </p>
          </div>

          <div class="action-panel">
            <button class="primary-button action-button">Play</button>
            <button class="secondary-button action-button">Draw</button>
            <button class="primary-button uno-button">UNO</button>
          </div>
        </section>

        <section class="player-hand-section">
          <div class="player-hand-header">
            <span>You</span>
            <span class="muted">Cards: 5</span>
          </div>
          <div class="hand-row">
            <div class="card-slot">1</div>
            <div class="card-slot">5</div>
            <div class="card-slot">7</div>
            <div class="card-slot">9</div>
            <div class="card-slot">3</div>
          </div>
          <div class="player-label">Player One (You)</div>
        </section>
      </main>
    </div>
  </body>
</html>
