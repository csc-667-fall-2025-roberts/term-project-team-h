<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Game Lobby</title>
    <link rel="stylesheet" href="/stylesheets/lobby.css" />
  </head>
  <body>
    <!-- HEADER -->
    <header class="header">
      <div class="header-title">
        <h1>Game Lobby</h1>
      </div>
      <div class="header-user">
        <span class="username">Username</span>
        <a href="/" class="logout-btn">Log Out</a>
      </div>
    </header>

    <!-- MAIN AREA -->
    <main class="main">
      <!-- LOBBY GRID -->
      <section class="lobby-section">
        <div class="lobby-grid">
          <!-- Repeat this card per lobby (in EJS youâ€™d loop) -->
          <article class="lobby-card">
            <div class="lobby-card-top">
              <span class="lobby-name">[ Username ]'s Lobby</span>
              <span class="lobby-count">1/4</span>
            </div>
            <a href="/games/1" class="join-btn">Join</a>
          </article>

          <article class="lobby-card">
            <div class="lobby-card-top">
              <span class="lobby-name">[ Username ]'s Lobby</span>
              <span class="lobby-count">2/4</span>
            </div>
            <a href="/games/1" class="join-btn">Join</a>
          </article>

          <article class="lobby-card">
            <div class="lobby-card-top">
              <span class="lobby-name">[ Username ]'s Lobby</span>
              <span class="lobby-count">3/4</span>
            </div>
            <a href="/games/1" class="join-btn">Join</a>
          </article>

          <article class="lobby-card">
            <div class="lobby-card-top">
              <span class="lobby-name">[ Username ]'s Lobby</span>
              <span class="lobby-count">4/4</span>
            </div>
            <button class="join-btn" disabled>Full</button>
          </article>
        </div>

        <div class="create-room-wrapper">
          <a href="/lobby/waiting_room" class="create-room-btn">Create Room</a>
        </div>
      </section>

      <!-- CHAT PANEL -->
      <aside class="chat-section">
        <div class="chat-header">Lobby Chat</div>

        <div class="chat-messages">
          <div class="message">
            <span class="message-user">Alice:</span>
            <span class="message-text">Anyone up for a quick game?</span>
          </div>
          <div class="message">
            <span class="message-user">Bob:</span>
            <span class="message-text">Give me 2 minutes!</span>
          </div>
        </div>

        <form class="chat-input" action="#" method="POST">
          <input
            type="text"
            name="message"
            placeholder="Type a message..."
            autocomplete="off"
          />
          <button type="submit">Send</button>
        </form>
      </aside>
    </main>

    <div id="create-room-modal" class="create-room-modal hidden">
      <div class="page">
          <header class="page-header">
            <h1>Create A Room</h1>
          </header>

          <main class="layout">
            <section class="column">
              <div class="section-label">Max Players</div>
              <div class="max-player-buttons">
                <button class="pill-button">2 Players</button>
                <button class="pill-button">3 Players</button>
                <button class="pill-button">4 Players</button>
              </div>
            </section>

            <section class="column">
              <h2 class="section-title">Players in Lobby</h2>
              <div class="players-card">
                <ul class="player-list">
                  <li>[ Player Username ]</li>
                  <li>[ Player Username ]</li>
                  <li>[ Player Username ]</li>
                  <li>[ Player Username ]</li>
                </ul>
              </div>
            </section>

            <section class="column">
              <button class="primary-button wide-button">Set Room Password</button>
              <button class="secondary-button wide-button">Invite Player</button>
            </section>
          </main>

          <footer class="page-footer">
            <div class="start-wrapper">
              <a href="/lobby/waiting_room" class="primary-button start-button">Create Room</a>
              <button id="close-modal" class="secondary-button start-button">Cancel</button>
            </div>
          </footer>
      </div>
    </div>

    <!-- Script to change class for create room -->
    <script>
      const openBtn = document.querySelector('.create-room-btn');
      const modal = document.getElementById('create-room-modal');
      const closeBtn = document.getElementById('close-modal');

      openBtn.addEventListener('click', (e) => {
        e.preventDefault();       // prevent navigating away
        modal.classList.remove('hidden');
      });

      closeBtn.addEventListener('click', () => {
        modal.classList.add('hidden');
      });
    </script>

  </body>
</html>
