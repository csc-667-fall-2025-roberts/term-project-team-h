<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= room.hostUsername %>'s Lobby</title>
    <link rel="stylesheet" href="/stylesheets/waiting_room.css" />
  </head>
  <body>
    <div
      class="page"
      data-room-id="<%= room.id %>"
      data-is-gamemaster="<%= isGameMaster %>"
    >
      <header class="page-header">
        <h1><%= room.hostUsername %>'s Game Lobby</h1>
      </header>

      <main class="layout">
        <section class="column">
          <h2 class="section-title">Players in Lobby</h2>
          <div class="players-card">
            <ul class="player-list">
              <% players.forEach(function (player) { %>
                <li>
                  <%= player.username %>
                  <% if (player.isGameMaster) { %>
                    (Host)
                  <% } %>
                </li>
              <% }); %>
            </ul>
          </div>

          <div style="margin-top: 24px;">
            <% if (isGameMaster) { %>
            <button
              class="primary-button wide-button"
              type="button"
              id="waiting-set-room-password"
            >
              Set Room Password
            </button>
            <button
              class="secondary-button wide-button"
              type="button"
              id="waiting-delete-room"
            >
              Delete Room
            </button>
            <%}%>
            <% if (!isGameMaster) { %>
              <button
                class="primary-button wide-button"
                type="button"
                id="waiting-leave-game"
              >
                Leave Room
              </button>
            <% } %>
          </div>
        </section>

        <!-- CHAT PANEL -->
        <aside class="chat-section" data-room-type="game" data-game-room-id="<%= room.id %>">
          <div class="chat-header">Room Chat</div>

          <div class="chat-messages" id="chat-messages"></div>

          <form class="chat-input" id="chat-form">
            <input
              type="text"
              name="message"
              id="chat-input-field"
              placeholder="Type a message..."
              autocomplete="off"
            />
            <button type="submit">Send</button>
          </form>
        </aside>
      </main>

      <footer class="page-footer">
        <div class="start-wrapper">
          <% if (isGameMaster) { %>
            <button
              type="button"
              class="primary-button start-button"
              id="waiting-start-game"
            >
              Start Game
            </button>
          <% } else { %>
            <span>Waiting for host to start the gameâ€¦</span>
          <% } %>
        </div>
      </footer>
    </div>

    <script src="/js/bundle.js"></script>
  </body>
</html>
