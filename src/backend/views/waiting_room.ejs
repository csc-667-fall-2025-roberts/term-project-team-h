<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= room.hostUsername %>'s Lobby</title>
    <link rel="stylesheet" href="/stylesheets/waiting_room.css" />
  </head>
  <body>
    <div class="page">
      <header class="page-header">
        <h1><%= room.hostUsername %>'s Game Lobby</h1>
      </header>

      <main class="layout">
        <section class="column">
          <h2 class="section-title">Players in Lobby</h2>
          <div class="players-card">
            <ul class="player-list">
              <% players.forEach(function (player) { %>
                <li>
                  <%= player.username %>
                  <% if (player.isGameMaster) { %>
                    (Host)
                  <% } %>
                </li>
              <% }); %>
            </ul>
          </div>
        </section>

        <section class="column">
          <button
            class="primary-button wide-button"
            type="button"
            id="waiting-set-room-password"
          >
            Set Room Password
          </button>
          <button
            class="secondary-button wide-button"
            type="button"
            id="waiting-invite-player"
          >
            Invite Player
          </button>
        </section>
      </main>

      <footer class="page-footer">
        <div class="start-wrapper">
          <% if (isGameMaster) { %>
            <a href="/games/<%= room.id %>" class="primary-button start-button">
              Start Game
            </a>
          <% } else { %>
            <span>Waiting for host to start the gameâ€¦</span>
          <% } %>
        </div>
      </footer>
    </div>
  </body>
</html>
